{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <h2 class="page-header">Latest Users</h2>
        <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>Password</th>
            <th>Date created</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.username }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.dateCreate|date('Y-m-d H:i:s') }}</td>
            <td>
                <a href="/user/details/{{ user.id }}" class="btn btn-success">View</a>
                <a href="/user/edit/{{ user.id }}" class="btn btn-default">Edit</a>
                <a href="/user/delete/{{ user.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}